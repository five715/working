image,page{width: 100%;height: 100%;display: block}
.boxes{width: 100%;height: 100%;}

.popup{position: fixed; top:0;left: 0;width: 100%;height: 100%;z-index: 9;background: rgba(0,0,0,0.8); display: none;}
.popup .pop{position: absolute;}
.popup .close{position: absolute; top: -60rpx; right: 5rpx; width: 67rpx; height: 67rpx;}
.block{display: block}
.none{display: none}

.btn{padding: 0;border: none;border-color: transparent; }
.btn::after{border: none}



.navs{position: absolute; top: 1135rpx; left: 44rpx; width: 663rpx; height: 71rpx;}
.navs .nav{width: 205rpx; height: 59rpx; display: inline-block; margin-right: 18rpx;}
.navs .nav:last-child{margin-right: 0}


.pageBg{position: fixed; top: 0; left: 0; width: 750rpx; height: 1350rpx;}


.advance .play{ animation: advanceMove 0.5s infinite linear alternate}
@keyframes advanceMove{
  0%{transform: scale(1)}
  100%{transform: scale(1.01)}
}